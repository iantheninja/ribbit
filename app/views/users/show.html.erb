<% if current_user %>
<div id="createRibbit" class="panel right">
    <h1>Create a Ribbit</h1>
    <p>
      <%= form_for Ribb.new do |f|%>
        <%= f.text_area :content, class: 'ribbitText' %>
        <%= f.submit "Ribb it" %>
      <% end %>
    </p>
</div>
<% end %>
<!-- customizing each profile section -->
<div id="ribbits" class="panel left">
    <h1>Your Ribbit Profile</h1>
    <div class="ribbitWrapper">
        <img class="avatar" src="<%= @user.avatar_url %>">
        <span class="name"><%= @user.name %></span> @<%= @user.username %>
        <p>
        <%= @user.ribbs.size %> Ribbs
        <span class="spacing">XX followers</span>
        <span class="spacing">XX following</span>
        </p>
    </div>
</div>
<!-- customizing each ribb (post) -->
<div class="panel left">
    <h1>Your Ribbits</h1>
    <% @user.ribbs.each do |ribb|  %>
    <div class="ribbitWrapper">
        <img class="avatar" src="<%= @user.avatar_url %>">
        <span class="name"><%= @user.name %></span>
        @<%= @user.username %>
        <span class="time"><%= time_ago_in_words(ribb.created_at)%>ago</span>
          <p class="name"><%= ribb.content %></p>
    </div>
    <% end %>
</div>
